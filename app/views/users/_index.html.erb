<table class="table table-hover">
	<thead>
		<tr>
			<th></th>
			<th>Title</th>
			<th>Opinion</th>
		</tr>
	</thead>
	<tbody>
		<% books.each do |book| %>
		<tr>
			<td>
				<%= attachment_image_tag book.user, :profile_image, size: "50x50", format: 'jpeg', class: "img-circle pull-left profile-img", fallback: "no_image.jpg" %>
			</td>
			<td>
				<%= link_to book_path(book.id) do %>
				<%= book.title %>
				<% end %>
			</td>
			<td>
				<%= book.body %>
			</td>
		</tr>
		<% end %>
	</tbody>
</table>