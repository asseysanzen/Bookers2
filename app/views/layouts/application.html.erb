<!DOCTYPE html>
<html>
  <head>
    <title>Bookers</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
<div class="container">
  <div class="row" style="background-color: black;">
    <header id="header" class="header">
      <div class="col-lg-2" style="color: white;">
       <h3>Bookers</h3>
      </div>
      <div class="col-lg-10">
      <div id="slidemenu">
        <ul class="nav navbar-nav navbar-right" data-hover="dropdown" data-animations="zoomIn fadeIn fadeInUp fadeIn">
        <% if user_signed_in? %>
          <li class=""><span class="glyphicon glyphicon-home" aria-hidden="true"></span>
            <%= link_to 'Home', user_path(current_user.id) %>
          </li>
          <li class=""><span class="glyphicon glyphicon-user" aria-hidden="true"></span>
            <%= link_to 'Users', users_path %>
          </li>
          <li class=""><span class="glyphicon glyphicon-book" aria-hidden="true"></span>
            <%= link_to 'Books', books_path %>
          </li>
          <li class=""><span class="glyphicon glyphicon-log-out" aria-hidden="true"></span>
            <%= link_to "logout", destroy_user_session_path, method: :delete %>
          </li>
        <% else %>
          <li class=""><span class="glyphicon glyphicon-home" aria-hidden="true"></span>
            <%= link_to "Home", root_path %>
          </li>
          <li class=""><span class="glyphicon glyphicon-link" aria-hidden="true"></span>
            <%= link_to "About", home_about_path %>
          </li>
          <li class=""><span class="glyphicon glyphicon-edit" aria-hidden="true"></span>
            <%= link_to "sign up", new_user_registration_path %>
          </li>
          <li class=""><span class="glyphicon glyphicon-log-in" aria-hidden="true"></span>
            <%= link_to "login", new_user_session_path %>
          </li>
        <% end %>
        </ul>
      </div>
    </div>
    </header>
  </div>
<% flash.each do |key, value| %>
    <%= content_tag(:div, value, class: "#{key}") %>
  <% end %>
    <div class="row">
      <%= yield %>
    </div>

    <div class="row">
    <footer>
      <div class="col-xs-9"></div>
      <div class="col-xs-3">
      <p>CopyRight Infratop.inc</p>
      </div>
    </footer>
    </div>
</div>
  </body>
</html>
