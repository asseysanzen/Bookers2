<!DOCTYPE html>
<html>
  <head>
    <title>Bookers</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
<div id="container">
  <div id="theTarget">
    <div class="image1"></div>
    <div class="image2"></div>
    <div class="image3"></div>
    <div class="image4"></div>
    <div class="image5"></div>
  </div>
</div>
<div class="container">
  <div class="row" style="background-color: black;">
    <header id="header" class="header">
      <div class="col-lg-2" style="color: white;">
       <h3>Bookers</h3>
      </div>
      <div class="col-lg-10">
      <div id="slidemenu">
        <ul class="nav navbar-nav navbar-right" data-hover="dropdown" data-animations="zoomIn fadeIn fadeInUp fadeIn">
        <% if user_signed_in? %>
          <li class="">
            <%= link_to user_path(current_user.id) do %>
            <p><span class="glyphicon glyphicon-home" aria-hidden="true"></span>Home</p>
            <% end %>
          </li>
          <li class="">
            <%= link_to users_path do %>
            <p><span class="glyphicon glyphicon-user" aria-hidden="true"></span>Users</p>
            <% end %>
          </li>
          <li class="">
            <%= link_to books_path do %>
            <p><span class="glyphicon glyphicon-book" aria-hidden="true"></span>Books</p>
            <% end %>
          </li>
          <li class="">
            <%= link_to destroy_user_session_path, method: :delete do %>
            <p><span class="glyphicon glyphicon-log-out" aria-hidden="true"></span>logout</p>
            <% end %>
          </li>
        <% else %>
          <li class="">
            <%= link_to root_path do %>
            <p><span class="glyphicon glyphicon-home" aria-hidden="true"></span>Home</p>
            <% end %>
          </li>
          <li class="">
            <%= link_to home_about_path do %>
            <p><span class="glyphicon glyphicon-link" aria-hidden="true"></span>About</p>
            <% end %>
          </li>
          <li class="">
            <%= link_to new_user_registration_path do %>
            <p><span class="glyphicon glyphicon-edit" aria-hidden="true"></span>sign up</p>
            <% end %>
          </li>
          <li class="">
            <%= link_to new_user_session_path do %>
            <p><span class="glyphicon glyphicon-log-in" aria-hidden="true"></span>login</p>
            <% end %>
          </li>
        <% end %>
        </ul>
      </div>
    </div>
    </header>
  </div>
<% flash.each do |key, value| %>
    <%= content_tag(:div, value, class: "#{key}") %>
  <% end %>
    <div class="row">
      <%= yield %>
    </div>

    <div class="row">
    <footer>
      <div class="col-xs-9"></div>
      <div class="col-xs-3">
      <p>CopyRight Infratop.inc</p>
      </div>
    </footer>
    </div>
</div>
  </body>
</html>
