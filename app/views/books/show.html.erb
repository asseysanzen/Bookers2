<%= flash[:create] %>
<%= flash[:update] %>

<h1>User info</h1>
<%= attachment_image_tag @book.user, :profile_image, size: "100x100", format: 'jpeg', class: "img-circle pull-left profile-img", fallback: "no_image.jpg" %>
<h3><%= @book.user.name %></h3>
<h3><%= @book.user.introduction %></h3>
<% if @book.user.id == current_user.id %>
<p><%= link_to "プロフィール編集", edit_user_path(@book.user) %></p>
<% end %>

<%= form_for(@newbook, url: books_path) do |f| %>
  <% if @newbook.errors.any? %>
    <div id="error_explanation">
      <h2><%= @newbook.errors.count %>
      	errors prohibited this obj from being saved:
  	  </h2>
      <ul>
      <% @newbook.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <p>Tilte</p>
  <%= f.text_field :title %>
  <p>Opinion</p>
  <%= f.text_area :body %>
  <%= f.submit "Create Book" %>
<% end %>

<h1>Book detail</h1>

<%= attachment_image_tag @book.user, :profile_image, size: "50x50", format: 'jpeg', class: "img-circle pull-left profile-img", fallback: "no_image.jpg" %>
<%= link_to user_path(@book.user.id) do %>
<%= @book.user.name %>
<% end %>
<%= @book.title %>
<%= @book.body %>
<% if @book.user.id == current_user.id %>
<%= link_to "Edit", edit_book_path(@book.id) %>
<%= link_to "Destroy", book_path(@book), method: :delete %>
<% end %>