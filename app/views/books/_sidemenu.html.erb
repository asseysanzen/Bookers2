<h1>User info</h1>
<%= attachment_image_tag current_user, :profile_image, size: "100x100", format: 'jpeg', class: "img-circle pull-left profile-img", fallback: "no_image.jpg" %>
<h3><%= current_user.name %></h3>
<h3><%= current_user.introduction %></h3>
<% if current_user.id == current_user.id %>
<p><%= link_to "プロフィール編集", edit_user_path(current_user) %></p>
<% end %>

<h1>New Book</h1>
<%= form_for(book, url: books_path) do |f| %>
  <% if book.errors.any? %>
    <div id="error_explanation">
      <h2><%= book.errors.count %>
        errors prohibited this obj from being saved:
      </h2>
      <ul>
      <% book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <p>Tilte</p>
  <%= f.text_field :title %>
  <p>Opinion</p>
  <%= f.text_area :body %>
  <%= f.submit "Create Book" %>
<% end %>